<div class="container text-center" style="width: 40%;">
  <%= form_with(url: login_path) do |form| %>
    <div class="card text-center shadow p-3">
      <% if flash.alert %>
        <p><%= flash.alert %></p>
      <% end %>
      <div class="card-body">
        <h1 class="card-title mb-3">Login</h1>
        <div class="row mb-3">
          <div class="col">
            <%= form.text_field :name, class: "form-control", placeholder: "User name" %>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col">
            <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
          </div>
        </div>

        <div class="d-grid mb-3">
          <%= form.submit "Login", class: "btn btn-primary" %>
        </div>

        <div class="d-grid">
          <%= link_to "初めての方はこちらから", new_user_path, class: "btn btn-outline-info" %>
        </div>
      </div>
    </div>
  <% end %> 
</div>